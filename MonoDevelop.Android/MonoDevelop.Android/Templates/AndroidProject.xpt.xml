<?xml version="1.0"?>
<Template originator="Koushik Dutta"
          created="2009/06/08">
	
	<!-- Template Header -->
	<TemplateConfiguration>
		<_Name>Android Project</_Name>
		<_Category>C#/Android</_Category>
		<Icon>md-project-android</Icon>
		<LanguageName>C#</LanguageName>
		<_Description>Creates a Mono project for Android.</_Description>
	</TemplateConfiguration>
	
	<!-- Actions -->
	<Actions>
	</Actions>
	
	<!-- Template Content -->
	<Combine name = "${ProjectName}" directory = ".">
		<Options>
			<StartupProject>${ProjectName}</StartupProject>
		</Options>
		
		<Project name = "${ProjectName}" directory = "." type = "Android">
			<References>
				<Reference type="Gac" refto="System" />
			</References>
			<Files>
				<File name="Main.cs">
<![CDATA[
using System;

namespace ${Namespace}
{
	public static class Program
	{
		static void Main (string[] args)
		{
			Console.WriteLine("Hello World");
		}
	}
}	
]]>
				</File>
			</Files>
		</Project>
	</Combine>
</Template>
